{% extends 'base.html.twig' %}

{% block title %}Licencie index{% endblock %}

{% block body %}
    <h1>Licencie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for licencie in licencies %}
            <tr>
                <td>{{ licencie.id }}</td>
                <td>{{ licencie.firstName }}</td>
                <td>{{ licencie.lastName }}</td>
                <td>{{ licencie.email }}</td>
                <td>
                    <a href="{{ path('app_licencie_show', {'id': licencie.id}) }}">show</a>
                    <a href="{{ path('app_licencie_edit', {'id': licencie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_licencie_new') }}">Create new</a>
{% endblock %}
