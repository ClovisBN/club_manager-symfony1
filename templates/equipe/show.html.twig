{% extends 'base.html.twig' %}

{% block title %}
	{{ equipe.name }}
{% endblock %}

{% block body %}
	<h1>Détails de l'équipe
		{{ equipe.name }}
		(Winrate:
		{{ winrate|number_format(2) }}%)</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Date</th>
				<th>Équipe à domicile</th>
				<th>Score</th>
				<th>Équipe à l'extérieur</th>
			</tr>
		</thead>
		<tbody>
			{% for game in games %}
				{% set scoreClass = '' %}
				{% if game.scoreHome > game.scoreAway %}
					{% set scoreClass = 'bg-success' %}
				{% elseif game.scoreHome < game.scoreAway %}
					{% set scoreClass = 'bg-danger' %}
				{% endif %}

				<tr>
					<a class="link-games" href="{{ path('game_show', {'id': game.id}) }}">
						<td>{{ game.dateTime|date('d/m/Y H:i') }}</td>
						<td>{{ game.homeTeam.name }}</td>
						<td class="{{ scoreClass }}">
							<a class="link-games" href="{{ path('game_show', {'id': game.id}) }}">
								{{ game.scoreHome }}
								-
								{{ game.scoreAway }}
							</a>
						</td>
						<td>{{ game.awayTeam.name }}</td>
					</a>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<h2>Graphique des Match</h2>

	<div style="height: 500px; width: 100%; z-index: 100;">
		{{ render_chart(chart) }}
	</div>

{% endblock %}
